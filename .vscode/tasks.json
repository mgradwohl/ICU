{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                    "/std:c++20", // Use C++20 standard
                    "/Zi",        // Generate debugging information
                    "/DEBUG",     // Generate debugging symbols
                    "/EHsc",      // Enable C++ exceptions
                    "/nologo",    // Suppress logo output
                    "/I", "C:\\ICU\\icu4c-77_1-Win64-MSVC2022\\include", // Add ICU include directory
                    "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe", // Output executable
                    "${file}",    // Input source file
                    "/link",      // Linker options
                    "/LIBPATH:C:\\ICU\\icu4c-77_1-Win64-MSVC2022\\lib64", // Add ICU library directory
                    "icuuc.lib",  // Link ICU common library
                    "icuin.lib"   // Link ICU internationalization library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}